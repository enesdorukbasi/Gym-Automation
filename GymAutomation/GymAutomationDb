CREATE TABLE dbo_Trainers(
Id INT GENERATED ALWAYS AS IDENTITY,
Name VARCHAR(50),
Surname VARCHAR(50),
PhoneNumber VARCHAR(50),
Salary FLOAT,
PRIMARY KEY(Id)
)

CREATE TABLE dbo_Learners(
Id INT GENERATED ALWAYS AS IDENTITY,
Name VARCHAR(50),
Surname VARCHAR(50),
PhoneNumber VARCHAR(50),
IsActive BOOLEAN,
PRIMARY KEY(Id)
)

CREATE TABLE dbo_Payments(
Id INT GENERATED ALWAYS AS IDENTITY,
LearnerId INT,
TrainerId INT,
Pay FLOAT,
PaymentType BOOLEAN,
PRIMARY KEY(Id),
CONSTRAINT fk_Learner
      FOREIGN KEY(LearnerId) 
	  REFERENCES dbo_Learners(Id)
	  ON DELETE CASCADE,
CONSTRAINT fk_Trainer
      FOREIGN KEY(TrainerId) 
	  REFERENCES dbo_Trainers(Id)
	  ON DELETE CASCADE
)

CREATE TABLE dbo_SportsTools(
Id INT GENERATED ALWAYS AS IDENTITY,
Name VARCHAR(50),
TradeMark VARCHAR(50),
PRIMARY KEY(Id)
)